# Google Cloud Platform Environment Variables
# Copy this file to .env.gcp and fill in your actual values

# API Keys and Tokens
GITHUB_TOKEN=your_github_personal_access_token
GITLAB_TOKEN=your_gitlab_personal_access_token
HUGGINGFACE_TOKEN=your_huggingface_token
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration (Cloud SQL)
POSTGRES_HOST=your-cloud-sql-ip-or-connection-name
POSTGRES_PORT=5432
POSTGRES_DB=nexus
POSTGRES_USER=nexus
POSTGRES_PASSWORD=your_secure_password

# MongoDB (Atlas or self-hosted)
MONGODB_URI=mongodb://username:password@host:27017/nexus

# Redis (Memorystore or self-hosted)
REDIS_HOST=your-redis-ip
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Google Cloud Storage
GCS_BUCKET=your-project-id-nexus-storage
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-credentials.json

# AWS (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET=nexus-agi-storage
AWS_REGION=us-east-1

# Azure (if using Azure services)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string

# Communication Services
SENDGRID_API_KEY=your_sendgrid_api_key
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
DISCORD_BOT_TOKEN=your_discord_bot_token

# Application Configuration
NODE_ENV=production
PYTHONUNBUFFERED=1
PORT=8080

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_MONITORING=true

# Security
ALLOWED_ORIGINS=https://your-domain.com
API_KEY=your_api_key_for_endpoints

# Feature Flags
ENABLE_INTERNET_ACCESS=true
ENABLE_AI_COMMUNICATION=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_GITLAB_INTEGRATION=true
ENABLE_CLOUD_DEPLOYMENT=true
ENABLE_SELF_MODIFICATION=false

# Resource Limits
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=3600
MEMORY_LIMIT=4096

# Intervals (seconds)
AUTOMATION_INTERVAL=300
HEALTH_CHECK_INTERVAL=60
